{
  "name": "backend",
  "version": "1.0.0",
  "description": "product catalog backend",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.js",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "format": "prettier --write . --ignore-path .gitignore",
    "lint": "eslint ./src  --ignore-path .gitignore",
    "lint:fix": "eslint ./src --fix --ignore-path .gitignore",
    "fix-style": "npm run format && npm run lint -- --fix",
    "prepare": "cd .. && husky install backend/.husky && cd ./backend && husky add .husky/pre-commit \"cd ./backend && npm run lint:fix && git add .\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/node": "^18.11.8",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.4.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.31.10",
    "husky": "^8.0.1",
    "prettier": "2.7.1",
    "typescript": "^4.8.4"
  }
}
